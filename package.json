{
  "name": "conflow",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "dependencies": {
    "@conflow/frontend": "^0.1.0",
    "@conflow/backend": "^0.1.0"
  },
  "scripts": {
    "start": "wt -d packages/frontend --title conflow-frontend cmd /k yarn serve --port 8080; split-pane -d packages/backend --title conflow-backend cmd /k yarn develop",
    "serve:fe": "yarn workspace @conflow/frontend serve",
    "build:fe": "yarn workspace @conflow/frontend build",
    "serve:be": "yarn workspace @conflow/backend develop",
    "build:be": "yarn workspace @conflow/backend build"
  },
  "workspaces": [
    "packages/*"
  ]
}
